tcltest::test clone-0 {Test that state can be cloned 
} -setup {
  set params [OfflineEVBHoistPipeParams %AUTO%]
} -cleanup {
  $params destroy
  $newparams destroy
} -body {
  
  $params configure -sourcering "Falsehoods" -id "12345" -info "Data from Falsehoods"

  set newparams [$params clone]
  pickle $newparams
} -result "-sourcering Falsehoods -id 12345 -info {Data from Falsehoods}"

