# tests for trim - since

tcltest::test keep-since-ok {Check keep since criterion} \
-setup {
    set fname [tcltest::makeFile {} test.db]
    set model [LogModel %AUTO% -file $fname]
    set message1 [list                                                               \
        [dict create type LOG_MESSAGE severity INFO application Test_App            \
            source fox.nscl.msu.edu]                                                \
        [dict create timestamp [clock scan 1/1/2016] message {This is a test message}]    \
    ]
   $model addMessage $message1
   
   set message2 [list                                                       \
        [dict create type LOG_MESSAGE severity DEBUG application Test_App   \
            source fox.nscl.msu.edu]                                        \
        [dict create timestamp [clock scan 1/2/2016] message {This is another message}]    \
    ]                                                  
   
   
   $model addMessage $message2
   
   set message3 [list                                                           \
        [dict create type LOG_MESSAGE severity SEVERE application Test_App   \
            source fox.nscl.msu.edu]                                        \
            [dict create timestamp [clock scan 1/3/2016] message {Something really bad happened}]    \
    ]
   $model addMessage $message3
} \
-cleanup {
    $model destroy
    file delete $fname
} \
-body {
    $model trim {since 1/2/2016}                 ; #Keeps two records.
    
    db $fname
    set result [db eval "SELECT COUNT(*) log_messages"]
    db close
    set result
} -result 2

