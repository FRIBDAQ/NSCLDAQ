    # Dialog to require both host and program for readout.
    #
    proc NeedHostandProgram {} {
	tk_dialog .hosterror "Readout Program" \
		"Both the hostname and the readout program are required" \
		error 0 "Dismiss"
    }
    #
    # GUI entry to select readout program.
    #   container - container widget (frame or toplevel) in which the
    #               GUI is built.
    #   callback  - Proc to calback when info is in.
    #               parameters to the callback are container host path.
    #
    proc GetReadoutSpec {container callback} {

	set hostf [frame $container.hostframe -relief groove -bd 3]
	label $hostf.label -text "Readout Host: "
	entry $hostf.entry

	set progf [frame $container.programframe -relief groove -bd 3]
	label $progf.label -text "Readout File: "
	entry $progf.entry -width 40
	button $progf.browse -text "Browse..." \
		-command "ReadoutGui::Browse $progf"

	set actionf [frame $container.actions -relief groove -bd 3]
	button $actionf.ok -text "Ok" \
		-command "ReadoutGui::Ok $callback $container $hostf $progf"

	pack $hostf -fill x
	pack $hostf.label $hostf.entry -side left
	pack $progf -fill x
	pack $progf.label $progf.entry $progf.browse -side left
	pack $actionf -fill x
