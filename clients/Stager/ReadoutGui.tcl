    #
    proc setwidgetstates {list state} {
	foreach widget $list {
	    $widget config -state $state
	}
    }
    proc setmenustates {menus state} {
	foreach entry $menus {
	    set menu [lindex $entry 0]
	    set item [lindex $entry 1]
	    $menu entryconfigure  $item -state $state 
	}
    }
    #
    #  Elapsed run timer:
    #
    proc TimeToEndRun {} {
	variable RequestedDuration
	variable ElapsedTime
	
	scan $RequestedDuration "%d-%d:%d:%d" Rd Rh Rm Rs
	scan $ElapsedTime       "%d-%d:%d:%d" d h m s

	if {$Rd > $d} {return 0}
	if {$Rh > $h} {return 0}
	if {$Rm > $m} {return 0}
	if {$Rs > $s} {return 0}
	return 1
    }
    proc ClearElapsedTime {} {
	variable ElapsedTime
	set ElapsedTime "0-00:00:00"
    }
    proc StartElapsedTimer {begin pause} {
	variable ElapsedTimer 
	set ElapsedTimer [after 1000 ReadoutGui::SecondElapsed $begin $pause]
    }
    proc StopElapsedTimer {} {
	variable ElapsedTimer
	if {$ElapsedTimer != 0} {
	    after cancel $ElapsedTimer
	    set ElapsedTimer 0
	}
    }
    proc SecondElapsed {begin pause} {
	variable ElapsedTime
	variable ElapsedTimer
	variable EventFileStatusLine

	scan $ElapsedTime "%d-%d:%d:%d" Days Hrs Min Sec
	if {[incr Sec] >= 60} {
	    set Sec 0
	    if {[incr Min] >= 60} {
		set Min 0
		if {[incr Hrs] >= 24} {
		    set Hrs 0
		    incr Days
		}
	    }
	}
	#
	#  Set the run elapsed time.
	#
	set ElapsedTime [format "%d-%02d:%02d:%02d" $Days $Hrs $Min $Sec]
	#
	#  Update the status line for the event file:
	#  We need to sum all the sizes for all the segments.
	#  summing is done in Kbyte units in order to prevent overflows.
	#  We also invoke UpdateLinks to ensure that all event file links
	#  are valid.
	#
	set EventFile $Experiment::EventFilePath
	set EventDir  [file dirname $EventFile]
	set filepat $EventDir
	append filepat "/" \
		[::ExpFileSystem::GenRunFileBase $ReadoutControl::RunNumber] \
		 *
	set segments [glob -nocomplain $filepat]
	set nsegments [llength $segments]
	set size     0.0
	foreach segment $segments {
	    set status [catch {set segmentsize [file size $segment]}]
	    if {$status == 0} {
		set size [expr $size + $segmentsize/1024.0]
	    }
	}
	
	#  Now compute size in megabytes:

	set size [expr $size/1024.0]
	if {$nsegments > 0} {
	    UpdateLinks $segments
	    set EventFileStatusLine \
		    [format "Run %d recorded in %d segments totalling %9.2f Mbytes" \
		             $ReadoutControl::RunNumber $nsegments $size]
	} else {
	    set EventFileStatusLine \
		    [format "No run file segments for run %d yet" \
		            $ReadoutControl::RunNumber]
	}
	#
	# Repropagate self:
	#
	set ElapsedTimer [after 1000 ReadoutGui::SecondElapsed $begin $pause]
	
	#
	#  If the run is timed, see if it's time to end it:
	#  Need to do this now so that we can cancel self.
	#
	variable isTimed

	if {$isTimed} {
	    if {[TimeToEndRun]} {End $begin $pause}
	}
	
    }
    #  Respond to input from the Readout program:  Accept and append to the
    #  OutputWidget text widget.
    #
    proc ReadoutInput {fd} {
	variable OutputWidget
	if {![eof $fd]} {
	    $OutputWidget config -state normal
	    $OutputWidget insert end [read $fd 1000] ;# Assume fd is nonblock.
	    $OutputWidget see end
	    update idle
	    $OutputWidget config -state disabled
	}
    }
    proc OutputText {text} {
	variable OutputWidget
	variable OutputSavedLines
	set ticks [clock seconds]
	set timestamp [clock format $ticks]
	append timestamp " " $text "\n"
	$OutputWidget config -state normal
	$OutputWidget insert end $timestamp
	$OutputWidget see end
	update idle
	$OutputWidget config -state disabled

	# trim the text widget to save only the last 500 lines of text:
	
	if {[$OutputWidget compare $OutputSavedLines.0 < end]} {
	    $OutputWidget delete 0.0 {end - $OutputSavedLines lines}
	}
    }
    #
    # Called with a command sent to Readout. This is put in the
    # text window with a trailing newline.
    proc RdoCommand {line} {
	append line "\n"
	OutputText $line
    }
