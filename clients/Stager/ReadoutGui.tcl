    #   this is especially intended for production readout.
    #
    proc SourceFile {} {
	#
	#  Accept the file:
	#
	set script [tk_getOpenFile -defaultextension .tcl \
		                  -title "Source file: " \
				  -filetypes {
			      {{Tcl Scripts} {.tcl}}
			      {{Tk Scripts}  {.tk}}
			      {{All Files}   {*}}
			  }]
	if {$script != ""} {
	    set sfd [open $script r]
	    set contents [read $sfd]
	    ReadoutControl::SendCommand $contents
	}
	
    }
    #
    #  Utility function to see if the requested duration is valid.
    #
    proc ValidTime {} {
	variable isTimed
	variable RequestedDuration

	if {!$isTimed} {return 1}
	set nconvert [scan $RequestedDuration "%d-%d:%d:%d" d h m s]
	if {$nconvert != 4} { 
	    return 0 
	} else {
	    return 1
	}
    }
