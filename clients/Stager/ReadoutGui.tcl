    }
    #
    #  Called on exit:
    #  Provides a confirmation dialog...
    #
    proc Exit {} {
	set exit [tk_dialog .exitconfirmation \
		     "Exit ?" \
		     "Are you sure you want to exit?" \
		     questhead \
		     0 Yes No]
	if {$exit == 0} {
	    ReadoutControl::SetOnExit ReadoutGui::NoOp
	    ReadoutControl::ExitReadoutProgram
	    exit
	}
    }
    #
    # Called to do an emergency exit if the window is being destroyed.
    # We don't get to confirm this alas.
    #
    proc EmergencyExit {} {
	ReadoutControl::SetOnExit ReadoutGui::NoOp
	ReadoutControl::ExitReadoutProgram

	# Exit will happen automatically.
    }
    #
    # Processes new dialog box entry.
    # Brings up a dialog which selects a new front end host and program.
    # 
    proc NewDialog {} {
	toplevel .newdialog -class Dialog
	GetReadoutSpec .newdialog ReadoutGui::NewGotten
    }
    proc NewGotten {container host path} {
	ReadoutControl::SetReadoutProgram $host $path
	destroy $container
    }
    #
    #  This is called when the readout program exits.  It determines
    #  what if any cleanup is needed as a result of readout dying potentially
    #  in the middle of a run.
    proc CleanupRun {State} {
	# If is not ended, need to do emergency end run.
	#
	if {$State != "NotRunning"} {
#	    puts "Forcing an emergency end run...."
	    Experiment::EmergencyEnd
	    if {[ReadoutControl::isTapeOn]} {
		set nrun [ReadoutControl::GetRun]
		incr nrun
		ReadoutControl::SetRun $nrun
	    }
	}
    }
    #
    #   The readout program exited.  We need to ghost all the stuff
    #  which enabled on active.
    #  We need to change the restart menu entry to a Start entry.
    #
    proc ReadoutExited {RunStateonExit} {
	variable ActiveGhostedWidgets
	variable ActiveGhostedMenus
	variable FileMenu
	variable BeginButton
	variable PauseButton


	Diagnostics::Warning "Readout program exited."

	CleanupRun $RunStateonExit

	setwidgetstates $ActiveGhostedWidgets normal
	setmenustates $ActiveGhostedMenus     normal
	RunEnding     $BeginButton $PauseButton
	$BeginButton config -state disabled
	$PauseButton config -state disabled

	$FileMenu entryconfigure "Restart..." -label Start \
	     -command "ReadoutGui::Start $FileMenu $BeginButton  $PauseButton"

    }
    #
    #  Starts/restarts the front end program.
    #
    proc Start {menu beginbutton pausebutton} {
	if {![HaveReadout]} {
	    NeedHostandProgram
	    return
	}
	$menu entryconfigure Start -label "Restart..." \
		-command "ReadoutGui::Restart $menu $beginbutton $pausebutton"
	ReadoutControl::StartReadoutProgram
	RunEnding $beginbutton $pausebutton

    }
    proc Restart {menu beginbutton pausebutton} {
	if {![HaveReadout]} {
	    NeedHostandProgram
	    return 
	}
	set restart \
		[tk_dialog .restart "Restart" \
	"If you restart any currently active run will be ended.  Do you want to Restart?" \
	           questhead 1 Restart Cancel]
	if {$restart == 0} {
	    ReadoutControl::SetOnExit ReadoutGui::NoOp
	    ReadoutControl::ExitReadoutProgram
	    ReadoutControl::StartReadoutProgram
	    ReadoutControl::SetOnExit ReadoutGui::ReadoutExited
	    RunEnding $beginbutton $pausebutton
	}
	

    }
    #
    #  Dialog for accepting scaler parameters.
    #
    proc Scalers {} {
	toplevel .scalers -class Dialog
	wm       title .scalers "Scaler Parameters"
	set controls [frame    .scalers.controls -relief groove -borderwidth 2]
	set action   [frame    .scalers.action   -relief groove -borderwidth 2]
	label $controls.lblscalers -text "Scalers: "
	entry $controls.entscalers
	$controls.entscalers insert 0 $ReadoutControl::Scalers

	label $controls.lblperiod  -text "Period : "
	entry $controls.entperiod
	$controls.entperiod insert 0 $ReadoutControl::ScalerPeriod

	button $action.ok -text "Ok" \
	  -command "ReadoutGui::NewScalerParams $controls.entscalers $controls.entperiod"
	button $action.cancel -text "Cancel" -command "destroy .scalers"

	pack $controls
	grid configure $controls.lblscalers $controls.entscalers -row 0
	grid configure $controls.lblperiod  $controls.entperiod  -row 1

	pack $action
	pack $action.ok $action.cancel -side left
	
    }
    proc NewScalerParams {countwidget timewidget} {
	set Counttxt [$countwidget get]
	set Timetxt  [$timewidget get]

	if {[scan $Counttxt "%d" Countval] == 0} {
	    Diagnostics::Error \
		    "The number of scalers must be a  positive integer"
	    return
	}
	if {$Countval < 0} {
	    Diagnostics::Error \
		    "The number of scalers must be a  positive integer"
	    return
	}

	if {[scan $Timetxt "%d" Timeval] == 0} {
	    Diagnostics::Error \
		    "time interval between readouts must be an integer > 0"
	    return
	}
	if {$Timeval <= 0} {
	    Diagnostics::Error \
		    "The time interval between readouts must be an integer > 0"
	    return
	}
	destroy .scalers
	set ReadoutControl::Scalers $Countval
	set ReadoutControl::ScalerPeriod $Timeval
    }
    #
    #  Begin: Starts the run. RunStarting: Gui part of this process.
    #
    proc RunStarting {beginbutton pausebutton} {
	variable ActiveGhostedWidgets
	variable ActiveGhostedMenus
	variable EventStatusLineWidget
	variable EventFileStatusLine
	variable OutputWidget

	setwidgetstates $ActiveGhostedWidgets disabled
	setmenustates   $ActiveGhostedMenus   disabled
	ClearElapsedTime
	StartElapsedTimer $beginbutton $pausebutton

	$beginbutton config -text "End" \
		-command "ReadoutGui::End $beginbutton $pausebutton"
	$pausebutton config -state normal \
		-command "ReadoutGui::Pause $beginbutton $pausebutton"

	OutputText "Run Starting"
	SaveSettings
	if {[ReadoutControl::isTapeOn]} {
	    $EventStatusLineWidget config -bg green
	    $OutputWidget config -bg green
	} else {
	    set EventFileStatusLine ""
	}
    }
    proc Begin {beginbutton pausebutton} {
	variable RequestedDuration
	#  If necessary, check to see what to do
	#  if the user is ovewriting:
	#
	if {[ReadoutControl::isTapeOn]} {
	    after 1000
	    set action [OverwriteCheck]
	    if {$action == 0} {;	# Run aborted.
		return
	    }
	    if {$action == 1} {;	# Turn of tape.. but run.
		ReadoutControl::DisableTape
	    }
	    #  2 overwrite if needed.
	}
	#
	#  If it's a timed run, validate the time:
	#
	if {![ValidTime]} {
	    Diagnostics::Error "The run duration $RequestedDuration is badly formatted\n"
	    
	} else {
	    $beginbutton config -state disabled
	    RunStarting $beginbutton $pausebutton
	    ReadoutControl::Begin
	    ReadoutControl::ShowAll
	    after 5000 "$beginbutton config -state normal"
	}
    }
    #
    #  Pause: Pauses the run.  RunPausing: Gui part of this process.
    #
    proc RunPausing {beginbutton pausebutton} {
	$pausebutton config -text Resume \
		-command "ReadoutGui::Resume $beginbutton $pausebutton"
	StopElapsedTimer
	OutputText "Run Paused"
    }
    proc Pause {beginbutton pausebutton} {
	RunPausing $beginbutton $pausebutton
	ReadoutControl::Pause
	ReadoutControl::ShowAll
    }
    # Resume: Resumes a paused run.  RunResuming: Gui part of this process.
    #
    proc RunResuming {beginbutton pausebutton} {
	StartElapsedTimer $beginbutton $pausebutton
	$pausebutton config -text Pause \
		-command "ReadoutGui::Pause $beginbutton $pausebutton"
	OutputText "RunResumed"
    }
    proc Resume {beginbutton pausebutton} {
	RunResuming $beginbutton $pausebutton
	ReadoutControl::Resume
	ReadoutControl::ShowAll
    }
    #  End: ends the run RunEnding: Gui part of this process.
    #
    proc RunEnding {beginbutton pausebutton} {
	variable ActiveGhostedWidgets
	variable ActiveGhostedMenus
	variable EventStatusLineWidget
	variable OutputWidget

	StopElapsedTimer
	setwidgetstates $ActiveGhostedWidgets normal
	setmenustates   $ActiveGhostedMenus   normal

	$beginbutton config -text "Begin" \
		-command "ReadoutGui::Begin $beginbutton $pausebutton" \
		-state normal
	$pausebutton config -text "Pause" -state disabled -command ""
	$EventStatusLineWidget config -bg [. cget -bg]
	$OutputWidget config -bg [. cget -bg]
    }
    proc End {beginbutton pausebutton} {
	RunEnding $beginbutton $pausebutton
	$beginbutton config -state disabled
	ReadoutControl::End
	if {[ReadoutControl::isTapeOn]} {
	    set nrun [ReadoutControl::GetRun]
	    ReadoutControl::SetRun [incr nrun]
	}
	OutputText "Run Ended"
	ReadoutControl::ShowAll
	$beginbutton config -state normal

	SaveSettings
	
    }
    #
    #  Top level GUI for the run control.
    #
    proc ReadoutController {topname} {
	variable ActiveGhostedWidgets
	variable ActiveGhostedMenus
	variable OutputWidget
	variable FileMenu
	variable BeginButton
	variable PauseButton
	variable EventStatusLineWidget
	variable RecordToggle

	package require ReadoutControl
	package require Diagnostics

	ReadoutControl::GetRun     ;# Force package load.

	#   Build the window and menu structure.
	#

	# there are two possibilities.  The topname is . in which case
	# the interface is built into the base tk window, or it isn't in 
	# which case we'll pop up our own toplevel and build the gui into that.
	# regardless, a destroy handler is established to ensure that 
	# any readout program is killed off.
	#
	if {$topname != "."} {
	    set toplevelname $topname
	    toplevel $toplevelname
	    bind $toplevelname <Destroy> EmergencyExit
	} else {
	    set toplevelname ""
	    bind . <Destroy> EmergencyExit
	}
	wm title $topname "Run Control"

	#
	#  Build the program frame:
	#
	set pgmframe \
		[frame $toplevelname.program -relief groove -borderwidth 2]
	label $pgmframe.host -text "Host: "
	label $pgmframe.hostname -textvariable ReadoutControl::ReadoutHost
	label $pgmframe.program -text "Program: "
	label $pgmframe.programpath \
		-textvariable ReadoutControl::ReadoutProgram
	pack $pgmframe -side top
	pack $pgmframe.host $pgmframe.hostname $pgmframe.program \
		$pgmframe.programpath -side left
	#
	#  Much of the meat of the interface lives in the control status frame
	#  it contains several internal invisible frames used to place
	#  the controls.
	#
	set ctlframe  \
	     [frame $toplevelname.controlframe -relief groove -borderwidth 2]
	set titleframe [frame $ctlframe.title]
	label $titleframe.title -text "Title: "
	entry $titleframe.titlestring \
		-textvariable ReadoutControl::RunTitle \
		-width 50
	set rnotape [frame $ctlframe.rnotape]
	set RecordToggle [checkbutton $rnotape.taping \
			      -text "Record Events" \
			      -variable ReadoutControl::Taping]
	label $rnotape.run -text "Run number"
	entry $rnotape.runnumber \
		-textvariable ReadoutControl::RunNumber \
	    -validate key -validatecommand "ReadoutGui::ValidateRun %P" \
	    -invalidcommand bell

	set buttonframe \
		[frame $ctlframe.buttonframe  -relief groove -borderwidth 2]
	button $buttonframe.startstop -text Begin \
               -command \
	       "ReadoutGui::Begin $buttonframe.startstop $buttonframe.pauseres"
	button $buttonframe.pauseres  -text Pause -state disabled
	set BeginButton $buttonframe.startstop
	set PauseButton $buttonframe.pauseres

	set timeframe [frame $ctlframe.timeframe -relief groove -borderwidth 2]
	checkbutton $timeframe.timed -text timed -variable ReadoutGui::isTimed
	label       $timeframe.time -text "Run Duration: "
	entry       $timeframe.reqtime \
		-textvariable ReadoutGui::RequestedDuration \
		-state disabled
	label       $timeframe.elapsed -text "Elapsed time: "
	label       $timeframe.elapsedval -textvariable ReadoutGui::ElapsedTime

	set rctlframe \
		[frame $toplevelname.rctlframe -relief groove -borderwidth 2]
	set OutputWidget [text $rctlframe.output -width 70 -state disabled \
		-yscrollcommand "$rctlframe.scrollbar set"]
	scrollbar $rctlframe.scrollbar -orient vertical \
		-command "$rctlframe.output yview"

	set EventStatusLineWidget [
	   label     $toplevelname.evstatusline \
		     -textvariable ReadoutGui::EventFileStatusLine
	]

	pack $ctlframe -side top -fill x
	pack $titleframe $rnotape $buttonframe -side top -fill x
	pack $titleframe.title $titleframe.titlestring -side left
	pack $rnotape.taping $rnotape.run $rnotape.runnumber -side left
	pack $buttonframe.startstop  -side left
	pack $buttonframe.pauseres   -side right
	pack $timeframe -side top
	pack $timeframe.timed $timeframe.time $timeframe.reqtime \
		$timeframe.elapsed $timeframe.elapsedval -side left
	pack $rctlframe -side top
	pack $rctlframe.output -side left -fill x
	pack $rctlframe.scrollbar -side right -fill y
	pack  $toplevelname.evstatusline  -side top -fill x
	#
	# build the menubar`:
	#
	set menubar [menu $toplevelname.menubar -tearoff 0]
	$topname config -menu $menubar
	set filemenu [menu $menubar.file -tearoff 0]
	set FileMenu $filemenu
	$menubar add cascade -label File -menu $filemenu
	set scalermenu [menu $menubar.scaler -tearoff 0]
	$menubar add cascade -label Scalers -menu $scalermenu
	$filemenu add command -label "New..." -command ReadoutGui::NewDialog
	$filemenu add command -label Start    \
		-command \
 	                    "ReadoutGui::Start $filemenu $buttonframe.startstop $buttonframe.pauseres"
	$filemenu add separator
	$filemenu add command -label Source -command \
		ReadoutGui::SourceFile

	$filemenu add separator
	$filemenu add command -label Exit -command ReadoutGui::Exit

	$scalermenu add command -label "Parameters..." \
		-command ReadoutGui::Scalers

	#
	#  Items to ghost when a run is active:
	#
	set ActiveGhostedWidgets " $titleframe.titlestring
	                          $rnotape.taping
	                          $rnotape.runnumber
	                          $timeframe.timed
	                          $timeframe.reqtime
                                "
	lappend ActiveGhostedMenus "$filemenu New..." \
		                   "$scalermenu Parameters..."

	
	# The contrast of ghosted entry widgets (titlestring, runnumber
	# and reqtime is not good.  We improve this by setting the
	# disabled foreground color of these widges to be the same as
	# their normal foreground.

	ImproveEntryContrast $titleframe.titlestring
	ImproveEntryContrast $rnotape.runnumber
	ImproveEntryContrast $timeframe.reqtime


	if {[HaveReadout]} {
	    Start $filemenu $buttonframe.startstop $buttonframe.pauseres
	}
	# Recover file settings for scaler, title, run
	
	set title "Set a new title"
	set run     [Experiment::BiggestRun]
	set scalers 0
	set period 10
	set file [ExpFileSystem::GetRoot]/.readoutconfig
	if {[file exists $file]} {source $file}
	ReadoutControl::SetTitle $title
	ReadoutControl::SetRun   $run
	set ReadoutControl::Scalers $scalers
	set ReadoutControl::ScalerPeriod $period
	

	# Establish callback handlers for input from the Readout Program:
	#
	ReadoutControl::SetOnInput ReadoutGui::ReadoutInput
	#
	#  Let the experiment manager tell us what to use as the first run.
	#
	ReadoutControl::SetOnExit "ReadoutGui::ReadoutExited"
	ReadoutControl::SetOnCommand "ReadoutGui::RdoCommand"




    }
    
