button .motor.movement.buts.1.reverse   -command {StartRev} -text "Reverse" -bg lightblue -state disabled
button .motor.movement.buts.1.set_to_zero   -command {set_to_zero}  -text "Reset Axis" -bg lightblue -state disabled
button .motor.movement.buts.1.fwdToHome -command {fwdToHome} -text "Forward Home" -bg lightblue -state disabled

button .motor.movement.buts.2.halt      -command {halt}     -text "Emergency Halt" -bg lightblue -state disabled
button .motor.movement.buts.2.stop      -command {Stop}     -text "Stop" -bg lightblue -state disabled
button .motor.movement.buts.2.revToHome -command {revToHome} -text "Reverse Home" -bg lightblue -state disabled


# Create a lable entry for the go to position function

button .motor.movement.comnd.run -text "exec" 	-command { absolute_pos}
label .motor.movement.comnd.text -text "Move to:" -padx 0
entry .motor.movement.comnd.cmd -width 10 -relief sunken  -textvariable position
label .motor.movement.comnd.location -textvariable location

# Create a response spot for the command

label .motor.movement.result.text -text "Current location:"
label .motor.movement.result.output -textvariable output2

# Set up key binding equivalents to the buttons

