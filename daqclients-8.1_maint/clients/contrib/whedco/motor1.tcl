entry .motor.control.comnd.cmd -width 10 -relief sunken -textvariable icommand
.motor.control.comnd.run configure -state disabled
# Create a label and entry for a response needed command 
button .motor.control.comndres.runres -text "exec" -command Runres
.motor.control.comndres.runres configure -state disabled
label .motor.control.comndres.text -text "Command(W/ response):" -padx 0
entry .motor.control.comndres.cmd -width 10 -relief sunken -textvariable commandres
label .motor.control.result.text -text Result: -padx 0   
label .motor.control.result.output -textvariable output1
set output1 "no input"

label .motor.control.ip.ipaddress   -text "IP Adddress"        -padx 0
set ipaddress "35.8.35."
entry .motor.control.ip.ipa      -width 15 -relief sunken -textvariable ipaddress
focus .motor.control.ip.ipa      
