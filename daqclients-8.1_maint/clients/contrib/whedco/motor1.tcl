button .motor.control.buts.1.wboot  -command {Wboot }       -text "Activate"   -bg lightblue -state disabled
button .motor.control.buts.1.status -command {UpdateStatus} -text "Status"     -bg lightblue -state disabled
button .motor.control.buts.2.exit   -command {Cleanup}      -text "Exit"       -bg lightblue  
