     .motor.movement.buts.2.stop   \
.motor.movement.buts.2.revToHome          -padx 3 -pady 3

# Packing the command entry in the movement  area

pack .motor.movement.comnd.text -side left
pack .motor.movement.comnd.cmd -side left -fill x -padx 3
pack .motor.movement.comnd.run -side right

# Packing the response to command entry in movement

pack .motor.movement.result.text .motor.movement.result.output -side left
pack .motor.settings.scales
pack .motor.settings.set .motor.settings.cw  .motor.settings.ccw  -side left
#packing scales
pack .motor.settings.scales.speed \
     .motor.settings.scales.accel  \
     .motor.settings.scales.current -side left

set nscllogo [image create photo -file $mydir/nscl.gif] 
label .motor.settings.logo -image $nscllogo
pack .motor.settings.logo 
label .motor.settings.author -text " Report problems to \n vdmolen@nscl.msu.edu"
pack  .motor.settings.author -side bottom 

