# The next section is were I define the 
set sock 1
set quit 0
set flag 0
set returnflag 0
set closeflag 0
set wbflag 0
set status_open 0

proc Cboot {} {
 global  wbflag sock
 puts $sock 1POE=0; gets $sock ; #Hardware power disabled 
 .motor.control.buts.2.cboot    configure -state disabled -bg red
 .motor.movement.buts.1.forward configure -state disabled
 .motor.movement.buts.1.reverse configure -state disabled
 .motor.movement.buts.2.stop    configure -state disabled -bg lightblue 
 .motor.movement.buts.1.set_to_zero configure -state disabled
 .motor.movement.buts.2.halt    configure -state disabled
 .motor.settings.set            configure  -state disabled
 .motor.settings.cw             configure  -state disabled
 .motor.settings.ccw            configure  -state disabled
 .motor.movement.buts.1.fwdToHome configure -state disabled
 .motor.movement.buts.2.revToHome configure -state disabled

 set wbflag 0 
}

proc Cleanup {} {
    global  command closeflag flag sock
    global wbflag
    set wbflag 0
    if [catch {puts $sock 1STF } result] exit
    gets $sock 
    close $sock 
     exit
}
proc SockOpen {} {
   	global sock ipaddress output1
    	if [catch {socket $ipaddress 2001 } sock ] {
          set output1 "Error in Socket Connection!!!"
      } else {
      set output1 "Socket Connection Made"
    	fconfigure $sock -buffering line 
	.motor.control.buts.1.open   configure   -bg darkgray -fg gray -state disabled
   	.motor.control.buts.1.wboot  configure -state normal
      .motor.control.buts.1.status configure -state normal
      puts $sock 1CIE=1; gets $sock;   #Set Status to numberic    
      Communicate
	}
}
proc Communicate {} {
    global sock wbflag flag returnflag output1 status_open 
    global closeflag command 
    if {$wbflag == 1} {
	UpdatePosn
    }
    if { $status_open == 1} UpdateStatus
    if {$flag == 1} {
	    puts $sock $command
          gets $sock
	    set flag 0
    }   
    if {$returnflag == 1} {
		set mystatus [gets $sock]
		set rpos [string first * $mystatus]
		if [catch "set output1  [format %x [string range $mystatus [incr rpos] end] ]" ] {
		set output1  [string range $mystatus $rpos end ]
}
		set returnflag 0
     }	
     after 150 Communicate

}
proc Wboot {} {
  global wbflag command flag speed accel current sock
    set wbflag 1
    puts $sock 1KM=9; gets $sock; # Motor specific value for running conditions

    puts $sock 1CURC=$current; gets $sock;  #Specifies % of total of 5 amps to supply to motor
    puts $sock 1URA=50000; gets $sock;     #in order to specify  axis unit ratio: pulses/axis
    puts $sock 1MVL=$speed; gets $sock;   #motion velosity  axis units/sec 
    puts $sock 1MAC=$accel; gets $sock;  # acceleration
    puts $sock 1MDC=$accel; gets $sock; #deceleration
    puts $sock 1MPA=.8; gets $sock; #absolute move position, see RPA
    puts $sock 1OTE=1; gets $sock;  #Hardware overtravel enabled
    puts $sock 1POE=1; gets $sock;  #Hardware power enabled
    puts $sock 1RSF; gets $sock;   #Resets faults    
	CW ; #set direction of rotation
 
    .motor.movement.buts.1.forward configure -state normal
    .motor.movement.buts.1.reverse configure -state normal
    .motor.movement.buts.2.stop configure -state normal -bg red 
    .motor.movement.buts.1.set_to_zero configure -state normal
    .motor.movement.buts.2.halt configure -state normal
    .motor.movement.buts.1.fwdToHome configure -state normal
    .motor.movement.buts.2.revToHome configure -state normal
    .motor.control.buts.2.cboot  configure -state normal -bg lightblue
    .motor.control.comndres.runres configure -state normal
    .motor.control.comnd.run configure -state normal
    .motor.settings.set configure -state normal
    .motor.settings.cw  configure   -state normal
    .motor.settings.ccw configure   -state normal
   
    #Communicate
}
proc Setvalues {} {
    global wbflag command flag speed accel current sock
    puts $sock 1CURC=$current; gets $sock;  #Specifies % of total of 5 amps to supply to motor
    puts $sock 1MVL=$speed; gets $sock;  #motion velosity  axis units/sec 
    puts $sock 1MAC=$accel; gets $sock;  # acceleration
} 
proc StartRev {} {
    global command flag
    set command 1RVR
    set flag 1
}
proc CW {} {
    global command flag
    set command 1DIR=CW
    .motor.settings.cw  configure  -bg blue
    .motor.settings.ccw configure   -bg lightblue
    set flag 1
}
proc CCW {} {
    global command flag
    set command 1DIR=CCW
    .motor.settings.cw  configure  -bg lightblue
    .motor.settings.ccw configure   -bg blue
    set flag 1
}
proc StartFor {} {
    global command flag
    set command 1RVF
    set flag 1
}
proc Stop {} {
    global command flag
    set command 1ST  
    set flag 1
}
