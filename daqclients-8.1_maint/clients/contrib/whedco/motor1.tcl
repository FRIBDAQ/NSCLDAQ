wm title . "Whedco Motor Control Program"
set mydir [file dirname $argv0]
#Create and pack the Operations and Movement frames

# Creating the main frames
frame .motor -relief groove -borderwidth 5
frame .motor.control -relief groove -borderwidth 5
frame .motor.movement -relief groove -borderwidth 5
frame .motor.settings -relief groove -borderwidth 5
frame .motor.control.buts
frame .motor.control.comnd
frame .motor.control.response
frame .motor.control.comndres
frame .motor.control.result
frame .motor.control.ip
frame .motor.movement.buts
frame .motor.movement.buts.1
frame .motor.movement.buts.2
frame .motor.movement.comnd
frame .motor.movement.result
frame .motor.control.buts.1
frame .motor.control.buts.2
frame .motor.settings.scales
# Labels for the different frames

label .motor.title          -text "Stepper Motor Controller V0.5"
label .motor.control.title  -text "Control Operations"
label .motor.movement.title -text "Movement Commands"
label .motor.settings.title -text "Settings "

# Buttons in the Control Operations area

