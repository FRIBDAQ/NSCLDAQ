#focus .motor.movement.comnd.cmd
#
button .motor.settings.set -command {Setvalues} -text "Set Values"  -bg lightblue -state disabled
button .motor.settings.cw  -command {CW}        -text "Forward=CW"  -bg blue -state disabled
